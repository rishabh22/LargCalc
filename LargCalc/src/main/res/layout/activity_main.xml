<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.HB.largcalc.MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/input1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:height="100.0dip"
        android:hint="Enter 1st no." />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/input2"
        android:layout_below="@+id/input1"
        android:layout_alignLeft="@+id/input1"
        android:layout_alignStart="@+id/input1"
        android:height="100.0dip"
        android:hint="Enter 2nd no." />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:id="@+id/mult"
        android:layout_below="@+id/input2"
        android:layout_alignLeft="@+id/input2"
        android:layout_alignStart="@+id/input2"
        android:layout_marginTop="95dp"
        android:hint="Multiply"
        android:onClick="mult" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C"
        android:id="@+id/clear"
        android:layout_alignTop="@+id/mult"
        android:layout_alignRight="@+id/input2"
        android:layout_alignEnd="@+id/input2"
        android:hint="Clear"
        android:onClick="clear" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/result"
        android:layout_below="@+id/input2"
        android:layout_alignLeft="@+id/input2"
        android:layout_alignStart="@+id/input2"
        android:hint="Result"
        android:height="100dip" />
</RelativeLayout>
